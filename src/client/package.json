{
  "name": "kiama-client",
  "version": "1.0.0",
  "description": "KIAMA client component",
  "main": "../../dist/client/main.js",
  "scripts": {
    "build": "npm run build:main && webpack --mode production",
    "build:main": "tsc --project tsconfig.main.json",
    "start": "electron ../../dist/client/main.js",
    "dev": "concurrently \"webpack --mode development --watch\" \"wait-on ../../dist/client/main.js && electron ../../dist/client/main.js\"",
    "package": "electron-builder"
  },
  "dependencies": {
    "electron": "^25.0.0",
    "react": "^18.0.0",
    "react-dom": "^18.0.0",
    "socket.io-client": "^4.7.0"
  },
  "devDependencies": {
    "@types/react": "^18.0.0",
    "@types/react-dom": "^18.0.0",
    "concurrently": "^8.0.0",
    "css-loader": "^7.1.3",
    "electron-builder": "^24.0.0",
    "html-webpack-plugin": "^5.5.0",
    "sass": "^1.97.3",
    "sass-loader": "^16.0.7",
    "style-loader": "^4.0.0",
    "ts-loader": "^9.4.0",
    "typescript": "^5.0.0",
    "wait-on": "^7.0.0",
    "webpack": "^5.80.0",
    "webpack-cli": "^5.0.0"
  },
  "build": {
    "appId": "com.kiama.app",
    "files": [
      "dist/**/*",
      "node_modules/**/*",
      "src/server/dist/**/*"
    ],
    "directories": {
      "output": "dist"
    }
  }
}
